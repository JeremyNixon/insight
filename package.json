{
  "name": "insight",
  "version": "1.0.0",
  "description": "Insight - AI-powered document analysis and chat application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "ollama",
    "llm",
    "context",
    "chat",
    "insight",
    "document-analysis"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "ollama": "^0.5.0",
    "mammoth": "^1.6.0",
    "path": "^0.12.7",
    "fs-extra": "^11.2.0"
  },
  "build": {
    "appId": "com.yourname.insight",
    "productName": "Insight",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "node_modules/**/*"
    ]
  }
}